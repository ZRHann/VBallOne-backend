generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  matchesCreated Match[]  @relation("CreatedMatches")
  matchesReferee Match[]  @relation("RefereedMatches")
}

model Match {
  id         Int      @id @default(autoincrement())
  name       String
  location   String
  matchDate  DateTime
  createdAt  DateTime @default(now())
  status     MatchStatus @default(NOT_STARTED)

  createdBy  User     @relation("CreatedMatches", fields: [createdById], references: [id])
  createdById Int

  referee    User     @relation("RefereedMatches", fields: [refereeId], references: [id])
  refereeId  Int

  sets       MatchSet[]
}

model MatchSet {
  id        Int      @id @default(autoincrement())
  round     Int      // 第几轮，比如 1、2、3
  scoreA    Int      // A方比分
  scoreB    Int      // B方比分
  isPaused  Boolean  @default(false) // 该轮是否暂停
  match     Match    @relation(fields: [matchId], references: [id])
  matchId   Int

  createdAt DateTime @default(now())

  @@unique([matchId, round]) // 每个比赛的每一轮只能出现一次
}

enum MatchStatus {
  NOT_STARTED  // 未开始
  IN_PROGRESS  // 进行中
  FINISHED     // 已结束
}